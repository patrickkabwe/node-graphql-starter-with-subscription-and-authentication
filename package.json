{
  "name": "graphql-chat-app-with-node",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && cross-env TS_NODE_PROJECT=tsconfig.prod.json node -r tsconfig-paths/register dist/src/index.js",
    "dev": "nodemon src/server.ts",
    "push": "npx prisma db push",
    "generate": "npx prisma generate",
    "studio": "npx prisma studio",
    "seed": "npx prisma db seed",
    "test": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest watch",
    "prestart": "yarn push && yarn generate",
    "pm2": "pm2 start --name den npm -- start"
  },
  "dependencies": {
    "@apollo/server": "^4.0.2",
    "@graphql-tools/schema": "^9.0.4",
    "@prisma/client": "latest",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-redis-subscriptions": "^2.5.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.11.2",
    "jose": "^4.10.3",
    "ws": "^8.9.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@apollo/server-plugin-landing-page-graphql-playground": "^4.0.0",
    "@commitlint/cli": "^17.1.1",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.5",
    "@types/express": "^4.17.14",
    "@types/node": "^18.7.13",
    "@types/ws": "^8.5.3",
    "cross-env": "^7.0.3",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "prisma": "latest",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "tslib": "^2.4.0",
    "ttypescript": "^1.5.13",
    "typescript": "latest",
    "typescript-transform-paths": "^3.3.1",
    "vitest": "latest"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
